<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >


    <TextView
        android:text="AcceleationX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/AcceleationX" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AcceleationX"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/edtAcceleationX"
        android:text="X" />

    <TextView
        android:text="AcceleationY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:id="@+id/AcceleationY"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/AcceleationY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/edtAcceleationY"
        android:text="Y" />

    <TextView
        android:text="AcceleationZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AcceleationZ"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/edtAcceleationY"
        android:layout_alignRight="@+id/AcceleationX"
        android:layout_alignEnd="@+id/AcceleationX" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/AcceleationZ"
        android:layout_alignLeft="@+id/AcceleationZ"
        android:layout_alignStart="@+id/AcceleationZ"
        android:id="@+id/edtAcceleationZ"
        android:text="Z" />

    <TextView
        android:text="Longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LongiTude"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/edtAcceleationZ"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/LatiTude"
        android:layout_below="@+id/edtLongitude"
        android:layout_alignLeft="@+id/edtLongitude"
        android:layout_alignStart="@+id/edtLongitude" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtLatitude"
        android:text="M"
        android:layout_below="@+id/LatiTude"
        android:layout_alignLeft="@+id/LatiTude"
        android:layout_alignStart="@+id/LatiTude"
        android:layout_marginTop="20dp" />

    <Button
        android:text="Insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnInsert"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtLongitude"
        android:text="L"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/LongiTude"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnInsert"
        android:layout_marginTop="14dp"
        android:id="@+id/textView" />
</RelativeLayout>

